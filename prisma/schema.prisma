generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id     String  @id @default(uuid())
  name   String
  email  String  @unique
  hash   String

  Posts  Posts[]  // âœ… One-to-Many relation (1 person -> many posts)
}

model Posts {
  id             String  @id @default(uuid())
  title          String
  content        String
  personName     String

  personId  String      // foreign key
  owner          Person      @relation(fields: [personId], references: [id])
  comments       Comments[]

}


model Comments {
  id        String   @id @default(uuid())
  content   String
  postId String
  post     Posts @relation(fields: [postId], references: [id])
}